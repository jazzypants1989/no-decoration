{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "noEmit": true
  },
  "include": ["lib/**/*", "examples/**/*", "experiments/**/*"],
  "exclude": ["node_modules"]
}
